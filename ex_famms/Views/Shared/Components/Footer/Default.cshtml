@model FooterVM

@foreach (var item in Model.Footers)
{
    <a href="">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
        <span>
            @item.Adress
        </span>
    </a>
    <a href="">
        <i class="fa fa-phone" aria-hidden="true"></i>
        <span>
            Call @item.PhoneNumber
        </span>
    </a>
    <a href="">
        <i class="fa fa-envelope" aria-hidden="true"></i>
        <span>
            @item.Email
        </span>
    </a>

}