@model ContactVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}

<!-- inner page section -->
<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <h3>Contact us</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end inner page section -->
<!-- why section -->
<section class="why_section layout_padding">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="full">
                    <form asp-controller="Contact" asp-action="Index" method="post">
                        <div class="text-danger" asp-validation-summary="All">
                        </div>
                        <fieldset>

                            <input asp-for="FullName" type="text" placeholder="Enter your full name" required />
                            <span class="text-danger" asp-validation-for="FullName"></span>

                            <input asp-for="Email" type="email" placeholder="Enter your email address"  required />
                            <span class="text-danger" asp-validation-for="Email"></span>


                            <input asp-for="Subject" type="text" placeholder="Enter subject"  required />
                            <span class="text-danger" asp-validation-for="Subject"></span>


                            <textarea asp-for="Message" placeholder="Enter your message" required></textarea>
                           

                            <input type="submit" value="Submit" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end why section -->


